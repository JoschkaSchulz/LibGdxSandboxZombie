<?xml version="1.0" encoding="UTF-8"?>

<!-- 
Information zum events_ger.xml

ID:
Jedes Event ist mit einer eindeutigen ID belegt, diese darf kein zweites mal
vorkommen!

Gruppe:
Die Gruppe beschreibt in welchem Gebiet das Event auftreten kann. Durch eine
Stringfolge wird dies bestimmt wobei:
c = city
f = forest
p = plains
w = on ways

Level:
0 = Street
1..3 = Level
 -->

<events>
    <event id="1">
        <name>Zombie Kampf(street)</name>
        <classname>ZombieFight</classname>
        <group group="w" />
        <level level="0" />
    </event>
    <event id="2">
        <name>Zombie Kampf(lvl1)</name>
        <classname>ZombieFight</classname>
        <group group="c" />
        <level level="1" />
    </event>
    <event id="3">
        <name>Zombie Kampf(lvl2)</name>
        <classname>ZombieFight</classname>
        <group group="c" />
        <level level="2" />
    </event>
    <event id="4">
        <name>Zombie Kampf(lvl3)</name>
        <classname>ZombieFight</classname>
        <group group="c" />
        <level level="3" />
    </event>
</events>